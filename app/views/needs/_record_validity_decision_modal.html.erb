<div id="record-validity-decision-modal" class="modal" tabindex="-1" role="dialog" aria-labelledby="modal-record-validity-decision-label" aria-hidden="true">
  <div class="modal-dialog">
    <%= semantic_form_for @need, { url: update_status_need_path(@need), html: { class: "modal-content" } } do |f| %>
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
        <h3 id="modal-record-validity-decision-label" class="modal-title">Record validity decision</h3>
      </div>
      <div class="modal-body">
        <%= render partial: "needs/validity_decision_fields", locals: { f: f } %>
      </div>
      <div class="modal-footer">
        <button class="btn btn-default" data-dismiss="modal" aria-hidden="true">Cancel</button>
        <%= f.action :submit,
                     :method => :put,
                     :button_html => {
                       :value => "Update the status",
                       :class => "btn btn-danger"
                     }
                   %>
      </div>
    <% end %>
  </div>
</div>

<script>
  $('#record-validity-decision-button').
  attr('href', '#record-validity-decision-modal').
  attr('data-toggle', 'modal').
  attr('role', 'button')
</script>
