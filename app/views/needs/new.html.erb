<%= semantic_form_for "need", url: "/needs" do |f| %>
  <%= f.input :role, :label => "As a..." %>
  <%= f.input :goal, :label => "I want to..." %>
  <%= f.input :benefit, :label => "So that..." %>
  <%= f.input :organisations, :label => "Organisations" %>
  <%= f.input :justification, :label => "Why is this needed?", :as => :check_boxes, :collection => @why_needed %>
  <%= f.input :evidence, :label => "Evidence", :as => :text %>

  <%= f.action :submit, :as => :button %>
<% end %>
