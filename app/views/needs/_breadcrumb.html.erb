<nav>
  <ul class="breadcrumb">
    <li><%= link_to "All needs", needs_path %></li>

    <% if defined?(action) and defined?(need) %>
      <li><%= breadcrumb_link_for(need) %></li>
      <li class="active"><%= action %></li>
    <% elsif defined?(action) and not defined?(need) %>
      <li class="active"><%= action %></li>
    <% else %>
      <li class="active"><%= short_label_for_need(need) %></li>
    <% end %>
  </ul>
</nav>
